<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:elevation="10dp"
        android:foreground="?attr/selectableItemBackground"
        card_view:cardCornerRadius="5dp">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/card"
            android:layout_gravity="center"
            android:background="#fff"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="horizontal">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/guidelines"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                app:backgroundTint="@color/white"
                app:elevation="2.0dip"
                app:fabSize="normal"
                app:rippleColor="@color/soft_grey"
                app:srcCompat="@drawable/route" />


            <android.support.design.widget.FloatingActionButton
                android:id="@+id/farmerDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                app:backgroundTint="@color/white"
                app:elevation="2.0dip"
                app:fabSize="normal"
                app:rippleColor="@color/soft_grey"
                app:srcCompat="@drawable/farmer" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/empdetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                app:backgroundTint="@color/white"
                app:elevation="2.0dip"
                app:fabSize="normal"
                app:rippleColor="@color/soft_grey"
                app:srcCompat="@drawable/team" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/detailsConfederation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                app:backgroundTint="@color/white"
                app:elevation="2.0dip"
                app:fabSize="normal"
                app:rippleColor="@color/soft_grey"
                app:srcCompat="@drawable/diagram" />


        </LinearLayout>
    </android.support.v7.widget.CardView>

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"></FrameLayout>

</LinearLayout>
